# Application Configuration
APP_NAME=Aionix Agent Backend
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Database Configuration
# PostgreSQL: postgresql+asyncpg://username:password@localhost:5432/database_name
# SQLite: sqlite+aiosqlite:///./aionix_agent.db
DATABASE_URL=postgresql+asyncpg://user:password@localhost/aionix_agent

# API Keys (Required for production)
OPENAI_API_KEY=your_openai_api_key_here
NEWS_API_KEY=your_news_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
VECTOR_DB_API_KEY=your_vector_database_api_key_here

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.docx,.txt
UPLOAD_DIRECTORY=uploads

# External API Configuration
NEWS_API_BASE_URL=https://newsapi.org/v2
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
OPENAI_BASE_URL=https://api.openai.com/v1

# Rate Limiting (requests per day)
NEWS_API_RATE_LIMIT=100
ALPHA_VANTAGE_RATE_LIMIT=25

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60

# AI Engine Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_OPENAI_MODEL=gpt-4
DEFAULT_HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Vector Database Configuration
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=aionix-documents
WEAVIATE_URL=http://localhost:8080
WEAVIATE_CLASS_NAME=Document

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# Document Processing Configuration
MAX_CHUNK_SIZE=2000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=token_aware

# Memory Configuration
ENABLE_MEMORY=true
MEMORY_RETENTION_DAYS=365

# Background Tasks (Optional)
ENABLE_CELERY=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0