{
  "compilerOptions": {
    /* ✅ Core build paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ✅ Module system: use CommonJS for Node apps (safer for Express/Prisma) */
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",

    /* ✅ Interop + JSON + types */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],

    /* ✅ Strictness and safety */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,

    /* ✅ Useful for debugging and publishing */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}